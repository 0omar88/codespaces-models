{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "npm install; pip install -r requirements.txt",
  "postAttachCommand": {},
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    }
  }
}
